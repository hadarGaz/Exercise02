<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theare"
    tools:context="com.project.hadar.AcadeMovie.Activity.SplashActivity">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/counter"
        android:layout_width="281dp"
        android:layout_height="257dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@mipmap/blank" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="Liad Pasker | Ofir Uzan | Hadar Gaziel | Linoy Shitrit"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-40dp"
        android:text="The Academic College of Tel-Aviv-Jaffa 2018" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="289dp"
        android:layout_height="68dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:text="AcadeMovie"
        android:textSize="30sp" />

</RelativeLayout>