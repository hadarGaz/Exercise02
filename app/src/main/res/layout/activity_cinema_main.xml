<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadar.exercise02.Activity.CinemaMainActivity"
    tools:layout_editor_absoluteY="25dp">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/movies_list"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="189dp"
        android:layout_marginStart="119dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileMenuButton"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/profileMenuButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:onClick="onClickProfileButton"
        app:srcCompat="@mipmap/liad_icon"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="16dp" />


</android.support.constraint.ConstraintLayout>
