<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadar.exercise02.SplashActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@Background"
        android:src="@mipmap/exercise2_main"></ImageView>


    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="270dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:adjustViewBounds="true"
        android:contentDescription="@Profile Pic"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_banner"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/user_name_banner"
        android:text="@User Name:" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sign_out_button"
        android:layout_below="@+id/user_name"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:text="@Email:" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Sign Out"
        android:background="@drawable/button_bg" />

    <ImageView
        android:id="@+id/user_name_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_banner"
        android:layout_alignStart="@+id/user_picture"
        app:srcCompat="@mipmap/user_name" />

    <ImageView
        android:id="@+id/email_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_out_button"
        android:layout_alignStart="@+id/user_name_banner"
        android:layout_marginBottom="30dp"
        app:srcCompat="@mipmap/email" />

</RelativeLayout>