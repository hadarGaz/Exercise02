<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadar.exercise02.SplashActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Background"
        android:src="@mipmap/exercise2_main"></ImageView>


    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="270dp"
        android:layout_height="240dp"
        android:layout_above="@+id/user_name_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:adjustViewBounds="true"
        android:contentDescription="@Profile Pic"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/user_name_banner"
        android:layout_marginStart="146dp"
        android:text="@User Name:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/email_banner"
        android:layout_marginStart="146dp"
        android:text="@Email:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Sign Out"
        android:background="@drawable/button_bg" />

    <TextView
        android:id="@+id/user_name_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="179dp"
        android:layout_marginEnd="-146dp"
        android:layout_toStartOf="@+id/user_email"
        android:text="Name:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/email_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/user_name_banner"
        android:layout_marginBottom="132dp"
        android:text="Email:"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageViewNameIcon"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/user_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        app:srcCompat="@mipmap/account3_icon" />

    <ImageView
        android:id="@+id/imageViewEmailIcon"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/user_email"
        android:layout_alignStart="@+id/imageViewNameIcon"
        app:srcCompat="@mipmap/email3_icon" />

</RelativeLayout>